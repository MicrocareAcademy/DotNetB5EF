@model IList<AcademyWebEF.BusinessEntities.Student>
@{
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row">
        <h2>Sutdents list <a href="@Url.Action("StudentEditor","Student")" style="float:right;" class="btn btn-primary">Add</a></h2>
        <table class="table table condensed">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Roll No</th>
                    <th>Date Of Birth</th>
                    <th>Email</th>
                    <th>Mobile No</th>
                    <th></th>

                </tr>
            </thead>
            <tbody>
                @foreach(var student in Model)
                {
                    <tr>
                        <td>@student.StudentName</td>
                        <td>@student.RollNo</td>
                        <td>@student.Dob.ToString("dd/MM/yyyy")</td>
                        <td>@student.Email</td>
                        <td>@student.MobileNo</td>
                        <td><a href="@Url.Action("StudentRO","Student",new{studentId = student.StudentId})">View</a> | <a href="@Url.Action("EditStudent","Student",new{studentId = student.StudentId})">Edit</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>